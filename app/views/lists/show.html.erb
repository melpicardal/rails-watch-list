<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/featured/?movies,<%= @list.name %>);">
  <div class="container">
    <h1>The <%= @list.name %> List</h1>
    <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: 'btn btn-danger mt-2' %>
  </div>
</div>
<div class="container my-3">
<%= cl_image_tag @bookmark.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="d-flex align-items-center justify-content-between">
    <h1 class="text-left my-3">Movies</h1>
    <%= link_to ('<i class="fas fa-trash"></i> Delete List').html_safe, lists_path, method: :delete, data: { confirm: 'you sure?'} %>
  </div>
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-category cards-movies", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
          <%= link_to bookmark_path(bookmark), method: :delete, class: 'card-remove-link', data: { confirm: 'you sure?'} do %>
            <i class="fas fa-trash"></i>
            <% end %>
        </div>
      <% end %>
    </div>
</div>
